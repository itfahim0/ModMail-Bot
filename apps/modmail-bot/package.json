        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.2",
        "prettier": "^3.4.2",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
